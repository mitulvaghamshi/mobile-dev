<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_btn_bg_1"
    android:padding="5dp">

    <TextView
        android:id="@+id/detail_list_item_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/detail_list_item_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_list_item_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/detail_list_item_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/detail_list_item_amount_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/detail_list_item_edit_button"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="0.2"
        android:background="@drawable/ic_edit"
        android:backgroundTint="@android:color/black" />
</LinearLayout>
