<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.mitul.dankawala.design.UserActivity"
    tools:showIn="@layout/activity_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_marginBottom="10dp"
            android:background="@drawable/row_btn_bg_1"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawableTint="@color/color_blue2"
            android:foregroundTint="@color/color_blue2"
            android:hint="Search Date..."
            android:textColor="@color/color_blue2"
            android:textColorHint="@color/color_blue2" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:listSelector="@drawable/row_btn_bg_2"
            android:scrollbars="none" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
