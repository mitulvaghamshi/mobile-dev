<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_btn_bg_1"
    android:gravity="center">

    <TextView
        android:id="@+id/member_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/member_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/member_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/member_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/member_call_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/ic_call"
        android:backgroundTint="@color/color_green1" />

    <View
        android:id="@+id/edit_member_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/ic_edit"
        android:backgroundTint="@android:color/black" />
</LinearLayout>
