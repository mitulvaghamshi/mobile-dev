<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp">

        <AutoCompleteTextView
            android:id="@+id/ed_search_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/row_btn_bg_1"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawableTint="@color/color_blue2"
            android:foregroundTint="@color/color_blue2"
            android:hint="Search date..."
            android:textColor="@color/color_blue2"
            android:textColorHint="@color/color_blue2" />

        <TextView
            android:id="@+id/month_total_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/row_btn_bg_1"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/exp_listview_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:childDivider="@null"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:groupIndicator="@null"
        android:scrollbars="none" />
</LinearLayout>