<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10_dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_button_bar_2"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10_dp">

        <TextView
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="@dimen/dimen_0_dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_simple_two_tv_listview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_20_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_simple_two_tv_listview_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_20_dp"
            android:paddingEnd="@dimen/dimen_10_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5_dp"
        android:background="@color/white" />
</LinearLayout>
